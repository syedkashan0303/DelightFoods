@model DelightFoods_Live.Models.DTO.CategoryModelDTO

@{
    ViewData["Title"] = "CreateSubCategory";
}

<h1>CreateSubCategory</h1>

<h4>CategoryModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSubCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ParentCategoryId" class="form-label">City</label>
                <select asp-for="ParentCategoryId" asp-items="@Model.ParentCategoryList" class="form-select" aria-required="true" required>
                    <option disabled selected>Select Parent Category</option>
                </select>
                <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreatedByUTC" class="control-label"></label>
                <input asp-for="CreatedByUTC" class="form-control" />
                <span asp-validation-for="CreatedByUTC" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
