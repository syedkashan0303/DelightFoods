@model DelightFoods_Live.Models.DTO.CategoryModelDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CategoryModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Parent Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParentCategoryName)
        </dd>

		<div class="row">
			<div class="col-sm-4">
				<strong>Documents</strong>
			</div>
			<div class="col-sm-8">
				@if (Model.MediaFileList != null && Model.MediaFileList.Any())
				{
					foreach (var item in Model.MediaFileList)
					{
                        <a href="@Url.Action("DownloadFile", "Home", new { fileName = item.FileName, FileId = item.FileId, CatetoryId = Model.Id })">Download File</a>
					}
				}
				else
				{
					<span>No file available for download</span>
				}
			</div>

		</div>
    </dl>
</div>
<div>
    <a asp-action="ChildCategoryEdit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="ChildCategoryList">Back to List</a>
</div>
