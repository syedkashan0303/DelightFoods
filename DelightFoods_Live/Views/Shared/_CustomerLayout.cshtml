@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Delightful Food</title>
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<meta content="" name="keywords">
	<meta content="" name="description">

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

	<!-- Google Web Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

	<!-- Icon Font Stylesheet -->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

	<!-- Libraries Stylesheet -->
	<link href="lib/lightbox/css/lightbox.min.css" rel="stylesheet">
	<link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

	<!-- Customized Bootstrap Stylesheet -->
	<link href="~/css/bootstrap.min.css" rel="stylesheet">

	<!-- Template Stylesheet -->
	<link href="~/css/style.css" rel="stylesheet">
</head>

<body>

	<!-- Spinner Start -->
	<div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
		<div class="spinner-grow text-primary" role="status"></div>
	</div>
	<!-- Spinner End -->
	<!-- Navbar start -->
	<div class="container-fluid fixed-top">
		<div class="container topbar bg-primary d-none d-lg-block">
			<div class="d-flex justify-content-between">
				<div class="top-info ps-2">
					<small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">Karachi</a></small>
					<small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">DelightFood.Info@gmail.com</a></small>
				</div>
				<div class="top-link pe-2">
					<a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
					<a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
					<a href="#" class="text-white"><small class="text-white ms-2">Sales and Refunds</small></a>
					<form class="text-white" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
						<button type="submit" style="background: transparent; border: none;" class="text-white ms-2">
							Logout
						</button>
					</form>

				</div>
			</div>
		</div>
		<div class="container px-0">
			<nav class="navbar navbar-light bg-white navbar-expand-xl">
				<a asp-controller="Home" asp-action="Dashboard" class="navbar-brand"><h1 class="text-primary display-6">Delightful Food</h1></a>
				<button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
					<span class="fa fa-bars text-primary"></span>
				</button>
				<div class="collapse navbar-collapse bg-white" id="navbarCollapse">
					<div class="navbar-nav mx-auto">
						<a asp-controller="Home" asp-action="Dashboard" class="nav-item nav-link active">Home</a>
						@if (!User.IsInRole("Admin"))
						{
							<a asp-controller="Product" asp-action="Shop" class="nav-item nav-link">Shop</a>
							@* <a asp-controller="Home" asp-action="Dashboard" class="nav-item nav-link">Shop Detail</a> *@
						}
						@*  <div class="nav-item dropdown">
						<a href="#" class="nav-link dropdown-toggle " data-bs-toggle="dropdown">Pages</a>
						<div class="dropdown-menu m-0 bg-secondary rounded-0">
						<a href="chackout.html" class="dropdown-item">Chackout</a>
						<a href="testimonial.html" class="dropdown-item">Testimonial</a>
						<a href="404.html" class="dropdown-item">404 Page</a>
						</div>
						</div> *@
						<a class="nav-item nav-link" asp-controller="Home" asp-action="ContactUs">Contact</a>
						<a class="nav-item nav-link" asp-controller="Home" asp-action="About">About</a>
						@if (User.IsInRole("Admin"))
						{
							<div class="nav-item dropdown">
								<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Product & Category</a>
								<div class="dropdown-menu m-0 bg-secondary rounded-0">
									<a class="nav-item nav-link" asp-controller="Product" asp-action="Index">Product</a>
									<a class="nav-item nav-link" asp-controller="Category" asp-action="Index">Category</a>
									<a class="nav-item nav-link" asp-controller="Category" asp-action="ChildCategoryList">Sub Category</a>
								</div>
							</div>
						}
						<div class="nav-item dropdown">
							<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Sale Orders</a>
							<div class="dropdown-menu m-0 bg-secondary rounded-0">
								@if (User.IsInRole("Admin"))
								{
									<a class="nav-item nav-link" asp-controller="SaleOrder" asp-action="AdminOrderList">Order Request List</a>
									<a class="nav-item nav-link" asp-controller="SaleOrder" asp-action="AdminReturnOrderList">Return Request Order List</a>
									<a class="nav-item nav-link" asp-controller="SaleOrder" asp-action="AdminCODOrderList">Cash On-Delivery Confirmation List</a>
								}
								else
								{

									<a class="nav-item nav-link" asp-controller="SaleOrder" asp-action="Index">Order List</a>
									<a class="nav-item nav-link" asp-controller="SaleOrder" asp-action="ReadyForShipOrders">Ready For Ship Order List</a>
									<a class="nav-item nav-link" asp-controller="SaleOrder" asp-action="ReturnOrderList">Return Order List</a>
								}
							</div>
						</div>

					</div>
					<div class="d-flex m-3 me-0">
						<a asp-controller="Cart" asp-action="Cart" class="position-relative me-4 my-auto">

							<i class="fa fa-shopping-bag fa-2x"></i>
							<span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1 cartvalue" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">0</span>
						</a>
					</div>
				</div>
			</nav>
		</div>
	</div>
	<!-- Navbar End -->
	
<!-- Global Body Start -->
	@RenderBody()

	<!-- Global Body End -->
	<!-- Footer Start -->
	<div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
		<div class="container py-5">
			<div class="pb-4 mb-4" style="border-bottom: 1px solid rgba(226, 175, 24, 0.5) ;">
				<div class="row g-4">
					<div class="col-lg-3">
						<a href="#">
							<h1 class="text-primary mb-0">Delight-Food</h1>
							<p class="text-secondary mb-0">Fresh products</p>
						</a>
					</div>
					<div class="col-lg-3">
						<div class="d-flex justify-content-end pt-3">
							<a class="btn  btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-twitter"></i></a>
							<a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-facebook-f"></i></a>
							<a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-youtube"></i></a>
							<a class="btn btn-outline-secondary btn-md-square rounded-circle" href=""><i class="fab fa-linkedin-in"></i></a>
						</div>
					</div>
				</div>
			</div>
			<div class="row g-5">
				<div class="col-lg-3 col-md-6">
					<div class="footer-item">
						<h4 class="text-light mb-3">Why People Like us!</h4>
						<p class="mb-4">
							Delight Foods is the leading brand for packed foods in Karachi, renowned for its commitment to quality and excellence. Our products are crafted with the finest ingredients, ensuring freshness and taste in every bite. Experience the best with Delight Foods, where superior quality meets exceptional flavor.
						</p>
						<a href="" class="btn border-secondary py-2 px-4 rounded-pill text-primary">Read More</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="d-flex flex-column text-start footer-item">
						<h4 class="text-light mb-3">Shop Info</h4>
						<a class="btn-link" href="">About Us</a>
						<a class="btn-link" href="">Contact Us</a>
						<a class="btn-link" href="">Privacy Policy</a>
						<a class="btn-link" href="">Terms & Condition</a>
						<a class="btn-link" href="">Return Policy</a>
						<a class="btn-link" href="">FAQs & Help</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="d-flex flex-column text-start footer-item">
						<h4 class="text-light mb-3">Account</h4>
						<a class="btn-link" href="">My Account</a>
						
						<a class="btn-link" href="">Shopping Cart</a>
						<a class="btn-link" href="">Wishlist</a>
						<a class="btn-link" href="">Order History</a>
						<a class="btn-link" href="">International Orders</a>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="footer-item">
						<h4 class="text-light mb-3">Contact</h4>
						<p>Address: Karachi</p>
						<p>Email: delightfood.info@gmail.com</p>
						<p>Phone: +92 336 (127)-9267 </p>
						<p>Payment Accepted</p>
						<img src="img/payment.png" class="img-fluid" alt="">
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Footer End -->
	<!-- Copyright Start -->
	<div class="container-fluid copyright bg-dark py-4">
		<div class="container">
			<div class="row">
				<div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
					<span class="text-light"><a href="#"><i class="fas fa-copyright text-light me-2"></i>@@Delight Foods</a>, All right reserved.</span>
				</div>
				<div class="col-md-6 my-auto text-center text-md-end text-white">
				</div>
			</div>
		</div>
	</div>
	<!-- Copyright End -->
	<!-- Back to Top -->
	<a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


	<!-- JavaScript Libraries -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/easing/easing.min.js"></script>
	<script src="~/lib/waypoints/waypoints.min.js"></script>
	<script src="~/lib/lightbox/js/lightbox.min.js"></script>
	<script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

	<!-- Template Javascript -->
	<script src="~/js/main.js"></script>
</body>

</html>

<script>
	$(document).ready(function () {

		$.ajax({
			type: 'GET',
			url: "@Url.Action("CartItemCount", "Cart")",
			success: function (result) {
				{
					console.log("Responce", result)
					$(".cartvalue").text(result);
				}
			},
			error: function (result) {
				Toast.create({ title: "Error", message: "Error", status: TOAST_STATUS.DANGER, timeout: 3000 });
			}
		});

	});


</script>