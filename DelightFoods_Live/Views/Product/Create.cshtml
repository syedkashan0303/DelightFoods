@model DelightFoods_Live.Models.DTO.ProductDTO
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Product";
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<main id="main" class="main">

    <div class="pagetitle">
        <div>
            <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i></a>
        </div>
        <h1>Products</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Dashboard">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Product List</a></li>
                <li class="breadcrumb-item">Create</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Enter Product Information</h5>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="Create" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Name" class="control-label"></label>
                                                <input asp-for="Name" class="form-control" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Description" class="control-label"></label>
                                                <input asp-for="Description" class="form-control" />
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="CategoryId" class="control-label">Category</label>
                                                <select asp-for="CategoryId" class="form-control" asp-items="@Model.categoryList"></select>
                                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Stock" class="control-label"></label>
                                                <input asp-for="Stock" min="1" max="50000" class="form-control" />
                                                <span asp-validation-for="Stock" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Price" class="control-label"></label>
                                                <input asp-for="Price" type="number" min="1" max="50000" class="form-control" />
                                                @* <input asp-for="Price" type="number" min="1" max="50000" class="form-control" pattern="[0-9]+(\.[0-9]+)?" title="Please enter a decimal number" /> *@
                                                <span asp-validation-for="Price" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-check-label control-label" asp-for="UploadedFiles">Attachments</label>
                                                <input asp-for="UploadedFiles" class="form-control" id="fileInput" />
                                                <span asp-validation-for="UploadedFiles" class="text-danger"></span>
                                                <div class="invalid-feedback">
                                                    Please upload your attachments.
                                                </div>
                                                <div class="invalid-upload"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <input id="saveButton" type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script src="/js/validateImageFile.js"></script>
