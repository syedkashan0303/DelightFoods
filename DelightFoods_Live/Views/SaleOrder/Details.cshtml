@model DelightFoods_Live.Models.DTO.SaleOrderDTO

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="form-control">
	<div>

		<h4>SaleOrderModel</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.TotalPrice)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.TotalPrice)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Status)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Status)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.CreatedOnUTC)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.CreatedOnUTC)
			</dd>
		</dl>

		<table class="table">
		<thead>
			<tr>
				<th>
					<p>ProductName</p>
				</th>
				<th>
					<p>Price</p>
				</th>
				<th>
					<p>Quantity</p>
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.saleOrderProductMappings)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.ProductName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Quantity)
					</td>
				</tr>
			}
		</tbody>
	</table>
	</div>

<div>
	<a asp-action="Index">Back to List</a> 
	<a asp-controller="SaleOrder" asp-action="GeneratePdf" asp-route-id="@Model.Id" class="btn btn-primary">Print Receipt</a>
</div>

	
</div>
